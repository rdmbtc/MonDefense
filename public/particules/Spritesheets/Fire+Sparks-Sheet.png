<svg width="256" height="256" xmlns="http://www.w3.org/2000/svg">
  <!-- Fire particle spritesheet placeholder -->
  <defs>
    <radialGradient id="fireGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#ffff00;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#ff6600;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#ff0000;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#990000;stop-opacity:0.3" />
    </radialGradient>
    <radialGradient id="sparkGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#ffff00;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#ff6600;stop-opacity:0.2" />
    </radialGradient>
  </defs>
  
  <!-- Fire particles in a 4x4 grid -->
  <g id="fire-particles">
    <!-- Row 1 -->
    <circle cx="32" cy="32" r="20" fill="url(#fireGradient)" opacity="0.9"/>
    <circle cx="96" cy="32" r="18" fill="url(#fireGradient)" opacity="0.8"/>
    <circle cx="160" cy="32" r="22" fill="url(#fireGradient)" opacity="0.7"/>
    <circle cx="224" cy="32" r="16" fill="url(#fireGradient)" opacity="0.6"/>
    
    <!-- Row 2 -->
    <circle cx="32" cy="96" r="24" fill="url(#fireGradient)" opacity="0.8"/>
    <circle cx="96" cy="96" r="20" fill="url(#fireGradient)" opacity="0.9"/>
    <circle cx="160" cy="96" r="18" fill="url(#fireGradient)" opacity="0.7"/>
    <circle cx="224" cy="96" r="26" fill="url(#fireGradient)" opacity="0.6"/>
    
    <!-- Row 3 - Sparks -->
    <circle cx="32" cy="160" r="8" fill="url(#sparkGradient)" opacity="1.0"/>
    <circle cx="96" cy="160" r="6" fill="url(#sparkGradient)" opacity="0.9"/>
    <circle cx="160" cy="160" r="10" fill="url(#sparkGradient)" opacity="0.8"/>
    <circle cx="224" cy="160" r="7" fill="url(#sparkGradient)" opacity="0.7"/>
    
    <!-- Row 4 - Mixed -->
    <circle cx="32" cy="224" r="14" fill="url(#fireGradient)" opacity="0.5"/>
    <circle cx="96" cy="224" r="9" fill="url(#sparkGradient)" opacity="0.8"/>
    <circle cx="160" cy="224" r="16" fill="url(#fireGradient)" opacity="0.6"/>
    <circle cx="224" cy="224" r="12" fill="url(#sparkGradient)" opacity="0.9"/>
  </g>
</svg>